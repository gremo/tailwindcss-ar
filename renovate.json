{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":automergePatch",
    ":pinDevDependencies",
    ":semanticCommitsDisabled"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "bump",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
